                      <Column size="91"/>
                      <Column size="120"/>
                    </Columns>
                    <Rows>
                      <Row size="24" band="head"/>
                      <Row size="24"/>
                    </Rows>
                    <Band id="head">
                      <Cell text="공장코드"/>
                      <Cell col="1" text="공장구역"/>
                      <Cell col="2" text="생산라인코드"/>
                      <Cell col="3" text="가용상태"/>
                      <Cell col="4" text="생산품목코드"/>
                      <Cell col="5" text="생산목표량"/>
